<?xml version="1.0"?>
<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service>
      <name>@SERVICE_NAME@</name>
      <displayName>@SERVICE_DISPLAY_NAME@</displayName>
      <comment>@SERVICE_DESCRIPTION@</comment>
      <version>@SERVICE_VERSION@</version>
      <components>
        <component>
          <name>@SERVICE_NAME@</name>
          <displayName>@COMPONENT_DISPLAY_NAME@</displayName>
          <category>MASTER</category>
          <cardinality>1</cardinality>
          <commandScript>
            <script>scripts/master.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>10000</timeout>
          </commandScript>
        </component>
      </components>
      <osSpecifics>
        <osSpecific>
          <osFamily>redhat7,redhat6,suse11</osFamily>
          <packages>
            <package>
              <name>wget</name>
            </package>
          </packages>
        </osSpecific>
      </osSpecifics>
      <requiredServices>
        <!-- <service>...</service> -->
      </requiredServices>
      <restartRequiredAfterChange>false</restartRequiredAfterChange>
      <configuration-dependencies>
        <config-type>@CONFIGURATION_PREFFIX@-site</config-type>
        <config-type>@CONFIGURATION_PREFFIX@-env</config-type>
      </configuration-dependencies>
    </service>
  </services>
</metainfo>